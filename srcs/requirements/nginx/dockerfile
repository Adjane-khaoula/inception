FROM debian:bullseye

RUN apt-get update 
RUN apt-get install -y nginx
RUN apt-get install openssl

# COPY . .
COPY certificate.crt /etc/ssl/
COPY private.key /etc/ssl/

COPY default.conf /etc/nginx/conf.d/
CMD ["nginx", "-g", "daemon off;"]


